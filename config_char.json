{
    "dataset_reader": {
      "type": "target_extraction",
      "token_indexers": {
        "tokens": {
          "type": "single_id",
          "lowercase_tokens": true
        },
        "token_characters": {
            "type": "characters"
        }
      }
    },
    "train_data_path": "../original_target_datasets/semeval_2014/restaurant_json/train.json",
    "validation_data_path": "../original_target_datasets/semeval_2014/restaurant_json/val.json",
    "test_data_path": "../original_target_datasets/semeval_2014/restaurant_json/test.json",
    "evaluate_on_test": true,
    "model": {
      "type": "crf_tagger",
      "label_encoding": "BIO",
      "constrain_crf_decoding": true,
      "calculate_span_f1": true,
      "dropout": 0.5,
      "include_start_end_transitions": false,
      "text_field_embedder": {
        "tokens": {
          "type": "embedding",
          "pretrained_file": "../../Downloads/example_augmentation/embeddings/glove.840B.300d.txt",
          "embedding_dim": 300,
          "trainable": false
        },
        "token_characters": {
            "type": "character_encoding",
            "embedding":{
                "embedding_dim": 15,
                "trainable": true
            },
            "encoder": {
                "type": "lstm",
                "bidirectional": true,
                "input_size": 15,
                "hidden_size": 15,
                "num_layers": 1,
                "dropout": 0.5
            }
            }
      },
      "encoder": {
        "type": "lstm",
        "input_size": 330,
        "hidden_size": 50,
        "bidirectional": true,
        "num_layers": 1
      }
    },
    "iterator": {
      "type": "basic",
      "batch_size": 64
    },
    "trainer": {
      "optimizer": {
        "type": "adam"
      },
      "validation_metric": "+f1-measure-overall",
      "num_epochs": 150,
      "grad_norm": 5.0,
      "patience": 10,
      "cuda_device": 0
    }
  }