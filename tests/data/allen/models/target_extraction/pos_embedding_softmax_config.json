{
    "dataset_reader": {
      "type": "target_extraction",
      "pos_tags": true,
      "token_indexers": {
        "tokens": {
          "type": "single_id",
          "lowercase_tokens": true
        },
        "token_characters": {
            "type": "characters",
            "min_padding_length": 1
        }
      }
    },
    "train_data_path": "tests/data/allen/dataset_readers/target_extraction/pos_sequence.json",
    "validation_data_path": "tests/data/allen/dataset_readers/target_extraction/pos_sequence.json",
    "model": {
      "type": "target_tagger",
      "label_encoding": "BIO",
      "crf": true,
      "constrain_crf_decoding": true,
      "calculate_span_f1": true,
      "dropout": 0.5,
      "include_start_end_transitions": false,
      "text_field_embedder": {
        "token_embedders": {
          "tokens": {
            "type": "embedding",
            "embedding_dim": 25
          },
          "token_characters": {
              "type": "character_encoding",
              "embedding": {
                "embedding_dim": 10
              },
              "encoder": {
                "type": "gru",
                "input_size": 10,
                "hidden_size": 15,
                "num_layers": 2,
                "dropout": 0.25,
                "bidirectional": true
              }
            }
        }
      },
      "pos_tag_embedding":{
        "embedding_dim": 10,
        "vocab_namespace": "pos_tags"
      },
      "encoder": {
        "type": "gru",
        "input_size": 65,
        "hidden_size": 80,
        "num_layers": 2,
        "dropout": 0.25,
        "bidirectional": true
      },
      "feedforward": {
        "input_dim": 160,
        "num_layers": 1,
        "hidden_dims": 20,
        "activations": ["relu"],
        "dropout": 0.2
      }
    },
    "iterator": {
      "type": "basic",
      "batch_size": 64
    },
    "trainer": {
      "optimizer": {
        "type": "adam"
      },
      "validation_metric": "+f1-measure-overall",
      "num_epochs": 5,
      "cuda_device": -1
    }
  }