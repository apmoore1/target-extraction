{
    "dataset_reader": {
      "type": "target_extraction",
      "token_indexers": {
        "tokens": {
          "type": "single_id",
          "lowercase_tokens": true
        },
        "token_characters": {
            "type": "characters",
            "min_padding_length": 1
        }
      }
    },
    "train_data_path": "tests/data/allen/dataset_readers/target_extraction/non_pos_sequence.json",
    "validation_data_path": "tests/data/allen/dataset_readers/target_extraction/non_pos_sequence.json",
    "model": {
      "type": "target_tagger",
      "label_encoding": "BIO",
      "constrain_crf_decoding": true,
      "calculate_span_f1": true,
      "dropout": 0.5,
      "include_start_end_transitions": false,
      "text_field_embedder": {
        "token_embedders": {
          "tokens": {
            "type": "embedding",
            "embedding_dim": 20,
            "trainable": true
          },
          "token_characters": {
              "type": "character_encoding",
              "embedding":{
                  "embedding_dim": 5,
                  "trainable": true,
                  "vocab_namespace": "token_characters"
              },
              "encoder": {
                  "type": "gru",
                  "bidirectional": true,
                  "input_size": 5,
                  "hidden_size": 5,
                  "num_layers": 1
              }
              }
        }
      }
    },
    "iterator": {
      "type": "basic",
      "batch_size": 64
    },
    "trainer": {
      "optimizer": {
        "type": "adam"
      },
      "validation_metric": "+f1-measure-overall",
      "num_epochs": 3,
      "grad_norm": 5.0,
      "cuda_device": -1
    }
  }