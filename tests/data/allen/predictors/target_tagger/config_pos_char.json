{
    "dataset_reader": {
      "type": "target_extraction",
      "pos_tags": true,
      "token_indexers": {
        "tokens": {
          "type": "single_id",
          "lowercase_tokens": true
        },
        "token_characters": {
            "type": "characters"
        }
      }
    },
    "train_data_path": "tests/data/allen/dataset_readers/target_extraction/pos_sequence.json",
    "validation_data_path": "tests/data/allen/dataset_readers/target_extraction/pos_sequence.json",
    "model": {
      "type": "target_tagger",
      "label_encoding": "BIO",
      "constrain_crf_decoding": true,
      "calculate_span_f1": true,
      "dropout": 0.5,
      "pos_tag_embedding": {
        "embedding_dim": 5,
        "vocab_namespace": "pos_tags"
      },
      "include_start_end_transitions": false,
      "text_field_embedder": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 20,
          "trainable": true
        },
        "token_characters": {
            "type": "character_encoding",
            "embedding":{
                "embedding_dim": 5,
                "trainable": true
            },
            "encoder": {
                "type": "gru",
                "bidirectional": true,
                "input_size": 5,
                "hidden_size": 5,
                "num_layers": 1,
                "dropout": 0.5
            }
            }
      }
    },
    "iterator": {
      "type": "basic",
      "batch_size": 64
    },
    "trainer": {
      "optimizer": {
        "type": "adam"
      },
      "validation_metric": "+f1-measure-overall",
      "num_epochs": 3,
      "grad_norm": 5.0,
      "cuda_device": -1
    }
  }